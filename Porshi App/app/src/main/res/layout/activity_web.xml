<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/wc"
    android:orientation="vertical"
    android:padding="15dp"
    android:gravity="center"
    android:id="@+id/ksfja">

    <Button
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:text="Facebook" android:textSize="25sp"
    android:layout_marginBottom="20dp" android:onClick="facebook"
    android:background="#3B5998"
    android:id="@+id/button" />

    <Button
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:text="Twiter"
    android:textSize="25sp"
    android:layout_marginBottom="20dp" android:onClick="twiter"
    android:background="#659FCB"
    android:id="@+id/button1" />

    <Button
    android:layout_width="match_parent"
    android:layout_height="60dp" android:textSize="25sp" android:onClick="websight"
    android:text="Website"
    android:background="#3B78E7"
    android:id="@+id/button2" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginTop="20dp"
        android:background="@color/black"
        android:text="Develoup By Xplore-ict\nwww.xploreict.com"
        android:gravity="center_horizontal"
        android:id="@+id/textView2"
        android:layout_gravity="center_horizontal" />


    <LinearLayout android:gravity="center" android:layout_gravity="bottom" android:layout_width="fill_parent" android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads">
        <com.google.ads.AdView
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ads:adSize="BANNER"
            android:layout_marginTop="10dp"
            ads:adUnitId="ca-app-pub-5413771746555783/8910174559"
            ads:testDevices="TEST_EMULATOR, TEST_DEVICE_ID"
            ads:loadAdOnCreate="true"  />
    </LinearLayout>

</LinearLayout>

