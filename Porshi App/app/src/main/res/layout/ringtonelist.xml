<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Total">
    <FrameLayout 
        android:layout_width="fill_parent" 
        android:layout_height="0dp" 
        android:layout_weight="1.0"
        android:background="#ff3789d5">
        <LinearLayout 
            android:orientation="vertical"  
            android:paddingBottom="20.0dip" 
            android:layout_width="fill_parent" 
            android:layout_height="fill_parent" 
            xmlns:android="http://schemas.android.com/apk/res/android">
            <ListView 
                android:id="@id/list" 
                android:layout_width="fill_parent" 
                android:layout_height="fill_parent" 
                android:listSelector="@drawable/list_selector" 
                style="@style/ListView" />
        </LinearLayout>
        <LinearLayout 
            android:layout_gravity="bottom" 
            android:orientation="vertical" 
            android:id="@id/LL_contentProgressBarParent" 
            android:visibility="gone" 
            android:layout_width="fill_parent" 
            android:layout_height="20.0dip">
            <ProgressBar 
                android:id="@id/progressBarParent" 
                android:layout_width="fill_parent" 
                android:layout_height="20.0dip" 
                style="?android:attr/progressBarStyleHorizontal" />
        </LinearLayout>
    </FrameLayout>
    <LinearLayout android:gravity="center" android:layout_gravity="bottom" android:layout_width="fill_parent" android:layout_height="wrap_content"
      xmlns:android="http://schemas.android.com/apk/res/android"
      xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads">
        <com.google.ads.AdView 
            android:id="@+id/adView"
            android:layout_width="wrap_content" 
            android:layout_height="wrap_content" 
            ads:adSize="BANNER" 
            ads:adUnitId="ca-app-pub-5413771746555783/8910174559"
            ads:testDevices="TEST_EMULATOR, TEST_DEVICE_ID"
            ads:loadAdOnCreate="true"  />
    </LinearLayout>
</LinearLayout>
