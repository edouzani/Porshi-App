<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:layout_margin="3dp"
    >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="3dp"
                android:background="#A9D428"
                android:gravity="center"
                android:text="Porshi Bio"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="@dimen/text_large" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                android:layout_marginBottom="3dp"
                android:background="#FFC653"
                android:text="@string/about"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="@dimen/text_small" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="3dp"
                android:background="#A9D428"
                android:gravity="center"
                android:text="First Album"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="@dimen/text_large" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFC653"
                android:layout_marginBottom="3dp"
                android:padding="5dp"
                android:text="@string/first"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="@dimen/text_small" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="3dp"
                android:background="#A9D428"
                android:gravity="center"
                android:text="Early Life"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="@dimen/text_large" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFC653"
                android:layout_marginBottom="3dp"
                android:padding="5dp"
                android:text="@string/early"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="@dimen/text_small" />


            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="3dp"
                android:background="#A9D428"
                android:gravity="center"
                android:text="Music Background"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="@dimen/text_large" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFC653"
                android:layout_marginBottom="3dp"
                android:padding="5dp"
                android:text="@string/music"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="@dimen/text_small" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="3dp"
                android:background="#A9D428"
                android:gravity="center"
                android:text="Awards And Nominations"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="@dimen/text_large" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFC653"
                android:layout_marginBottom="3dp"
                android:padding="5dp"
                android:text="@string/award"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="@dimen/text_small" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="3dp"
                android:background="#A9D428"
                android:gravity="center"
                android:text="Developer"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="@dimen/text_large" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFC653"
                android:padding="5dp"
                android:text="@string/dev"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="@dimen/text_small" />


        </LinearLayout>
    </ScrollView>

    <LinearLayout android:gravity="center" android:layout_gravity="bottom" android:layout_width="fill_parent" android:layout_height="wrap_content"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads">
        <com.google.ads.AdView
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ads:adSize="BANNER"
            ads:adUnitId="ca-app-pub-5413771746555783/8910174559"
            ads:testDevices="TEST_EMULATOR, TEST_DEVICE_ID"
            ads:loadAdOnCreate="true"  />
    </LinearLayout>

</FrameLayout>




